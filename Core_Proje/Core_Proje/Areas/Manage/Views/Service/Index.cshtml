@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Film</h1>
        <a asp-action="Create" asp-controller="Service" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title </th>             
                <th scope="col">Image</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@item.Title</td>


                    <td><img src="~/superFlio/images/services/@item.ImageUrl" style="max-width:100px" /></td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a asp-action="Edit" asp-controller="Service" asp-route-id="@item.ServiceId" class="btn btn-primary">Edit</a>
                            <a asp-action="PermaDelete" asp-controller="Service" asp-route-id="@item.ServiceId" class="btn btn-danger btn-sweet-delete">Perma-Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

